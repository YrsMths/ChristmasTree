<UserControl x:Class="ChristmasTree.Controls.SnowFlake"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChristmasTree.Controls"
             mc:Ignorable="d">
    <Grid>
        <Path Data="M 6,0 A 5,4 0 0 0 18,0" Fill="#DDDDDD">
            <Path.Effect>
                <BlurEffect Radius="4"/>
            </Path.Effect>
        </Path>
        <Path Data="M 4,0 A 6,6 0 1 0 20,0" Stroke="#DDDDDD" StrokeThickness="1" Fill="Transparent">
            <Path.Effect>
                <BlurEffect Radius="8"/>
            </Path.Effect>
        </Path>
    </Grid>
</UserControl>
